<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.dsce.students.notify.EditProfileActivity">

    <TextView
        android:id="@+id/usn_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="USN"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/edit_usn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usn_text"
        android:hint="Enter your USN" />

    <TextView
        android:id="@+id/number_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_usn"
        android:text="Number"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/edit_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/number_text"
        android:hint="Enter your Number"
        android:inputType="phone" />

    <TextView
        android:id="@+id/dept_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_number"
        android:layout_marginTop="12dp"
        android:text="Department"
        android:textAppearance="@android:style/TextAppearance.Small" />

    <Spinner
        android:id="@+id/user_department"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dept_text" />

    <TextView
        android:id="@+id/sem_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_department"
        android:layout_marginTop="12dp"
        android:text="Semester"
        android:textAppearance="@android:style/TextAppearance.Small" />

    <Spinner
        android:id="@+id/semester"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sem_text" />

    <TextView
        android:id="@+id/sec_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/semester"
        android:layout_marginTop="12dp"
        android:text="Section"
        android:textAppearance="@android:style/TextAppearance.Small" />

    <Spinner
        android:id="@+id/section"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/sec_text" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="updateDetails"
        android:src="@drawable/checkmark" />


</RelativeLayout>
